		<displayOrderInCategory>7900</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>0</biostatMet>
		<selectionWeight>0</selectionWeight>
	</GeneDef>

	<GeneDef ParentName="Outland_BodyScaleBase">
		<defName>Outland_BodyScale_Large</defName>
		<label>body scale (large)</label>
		<description>Carriers of this gene have a larger body scale than usual, bringing some overall stat changes.</description>
		<iconPath>OuterRim/GeneIcons/Gene_ScaleLarge</iconPath>
		<displayOrderInCategory>7903</displayOrderInCategory>
		<statFactors>
			<MoveSpeed>0.9</MoveSpeed>
			<Mass>1.1</Mass>
			<MeatAmount>1.1</MeatAmount>
			<LeatherAmount>1.1</LeatherAmount>
			<MeleeDamageFactor>1.05</MeleeDamageFactor>
			<WorkSpeedGlobal>0.9</WorkSpeedGlobal>
			<IncomingDamageFactor>0.95</IncomingDamageFactor>
			<CarryingCapacity>1.1</CarryingCapacity>
		</statFactors>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<bodyScaleFactor>(1.15,1.15)</bodyScaleFactor>
				<headScaleFactor>(1.15,1.15)</headScaleFactor>
				<backgroundPathEndogenes>OuterRim/GeneIcons/EndogeneBG</backgroundPathEndogenes>
				<backgroundPathXenogenes>OuterRim/GeneIcons/XenogeneBG</backgroundPathXenogenes>
			</li>
		</modExtensions>
	</GeneDef>

	<GeneDef ParentName="Outland_BodyScaleBase">
		<defName>Outland_BodyScale_Small</defName>
		<label>body scale (small)</label>
		<description>Carriers of this gene have a smaller body scale than usual, bringing some overall stat changes.</description>
		<iconPath>OuterRim/GeneIcons/Gene_ScaleSmall</iconPath>
		<displayOrderInCategory>7902</displayOrderInCategory>
		<statFactors>
			<MoveSpeed>1.1</MoveSpeed>
			<Mass>0.9</Mass>
			<MeatAmount>0.9</MeatAmount>
			<LeatherAmount>0.9</LeatherAmount>
			<WorkSpeedGlobal>1.05</WorkSpeedGlobal>
			<MeleeHitChance>0.8</MeleeHitChance>
			<MeleeDodgeChance>1.05</MeleeDodgeChance>
			<CarryingCapacity>0.9</CarryingCapacity>
		</statFactors>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<bodyScaleFactor>(0.85,0.85)</bodyScaleFactor>
				<headScaleFactor>(0.85,0.85)</headScaleFactor>
				<backgroundPathEndogenes>OuterRim/GeneIcons/EndogeneBG</backgroundPathEndogenes>
				<backgroundPathXenogenes>OuterRim/GeneIcons/XenogeneBG</backgroundPathXenogenes>
